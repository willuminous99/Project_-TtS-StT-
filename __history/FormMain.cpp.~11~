void __fastcall TForm1::BtnFindClick(TObject *Sender)
{
	bool Found;
	int l;

	/*WCharToPChar(TxtSearchWord->Text, FindWord);
	f=fopen("D:\\Source Code\\SimpleWordlists-master\\Wordlist-Verbs-All.txt", "rt");
	if (f) {
		Found=false;
		while (!feof(f)) {
